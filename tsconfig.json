{
  "exclude": [
    "node_modules",
    "lib",
    "src/typings",
    "__tests__"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "node-fetch"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
